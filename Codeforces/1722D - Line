/*

Problem Link: https://codeforces.com/contest/1722/problem/D

*/

#include<bits/stdc++.h>
using namespace std;

#define ll long long int

void solve(){
    ll n,i;
    cin>>n;
    string s;
    cin>>s;
    ll total=0;
    for(i=0;i<n;i++){
        if(s[i]=='L')
            total+=i;
        else
            total+=((n-1)-i);
    }
    vector<ll> dif;
    for(i=0;i<(n/2);i++){
        if(s[i]=='L'){
            ll extra=(n-2*i-1);
            dif.push_back(extra);
        }
    }
    for(i=n-1;i>=ceil(n/2.0);i--){
        if(s[i]=='R'){
            ll extra=(2*i+1-n);
            dif.push_back(extra);
        }
    }
    sort(dif.begin(),dif.end(),greater<ll>());
    for(i=0;i<dif.size();i++){
        total+=dif[i];
        cout<<total<<" ";
    }
    for(i=1;i<=n-dif.size();i++){
        cout<<total<<" ";
    }
    cout<<endl;
}

int main(){
    ll tc;
    tc = 1;
    cin>>tc;
    while(tc--){
        solve();
    }
    return 0;
}
