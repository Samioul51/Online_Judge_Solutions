/*

Question Link: https://codeforces.com/contest/621/problem/A

*/

#include<bits/stdc++.h>
using namespace std;

#define ll long long int

void SIR(){
    ll n,sum=0;
    cin>>n;
    vector<ll> v(n);
    for(int i=0;i<n;i++){
        cin>>v[i];
        sum+=v[i];
    }
    sort(v.begin(),v.end());
    for(int i=0;i<n;i++){
        if(sum%2==0){
            cout<<sum<<endl;
            return;
        }
        if(v[i]%2){
            sum-=v[i];
        }
    }
    cout<<sum<<endl;
}

int main(){
    ll tc;
    tc = 1;
    //cin>>tc;
    while(tc--){
        SIR();
    }
    return 0;
}
