/*

Question Link: https://codeforces.com/contest/1792/problem/A

*/

#include<bits/stdc++.h>
using namespace std;

#define ll long long int

void SIR(){
    ll n,one=0;
    cin>>n;
    for(int i=0;i<n;i++){
        ll p;
        cin>>p;
        if(p==1)
            one++;
    }
    ll count=0;
    count+=ceil(one/2.0);
    count+=(n-one);
    cout<<count<<endl;
}

int main(){
    ll tc;
    tc = 1;
    cin>>tc;
    while(tc--){
        SIR();
    }
    return 0;
}
