//GCD
ll gcd(ll a,ll b) { if (b==0) return a; return gcd(b, a%b); }

//LCM
ll lcm(ll a,ll b) { return a/gcd(a,b)*b; }

//Uppercase to Lowercase
string to_upper(string a) { for (int i=0;i<(int)a.size();++i) if (a[i]>='a' && a[i]<='z') a[i]-='a'-'A'; return a; }

//Lowercase to uppercase
string to_lower(string a) { for (int i=0;i<(int)a.size();++i) if (a[i]>='A' && a[i]<='Z') a[i]+='a'-'A'; return a; }

//Prime number
bool prime(ll a) { if (a==1) return 0; for (int i=2;i<=round(sqrt(a));++i) if (a%i==0) return 0; return 1; }

//Grid Type validation for Graph
vector<pll> gridD={{-1,0},{1,0},{0,-1},{0,1}};
bool valid(ll a,ll b,ll n,ll m){
    if(a<0 or a>=n or b<0 or b>=m)
        return false;
    return true;
}

//Factorial
ull fact(ll n){
    if(n==0 or n==1)
        return 1;
    ull res=1;
    cf(i,2,n){
        res*=i;
    }
    return res;
}
 
 
//Seive of Eratosthenes

const ll seiveN=1001;
//Prime--->marked with 1 in the array
//Non Prime--->marked with 0 in the array
ll isPrime[seiveN];

void seive(){
   f(i,2,seiveN){
    isPrime[i]=1;
   }
   isPrime[0]=isPrime[1]=0;
    for(i=2;i*i<seiveN;i++){
        if(isPrime[i]){
            for(ll j=i*i;j<seiveN;j+=i){
                isPrime[j]=0;
            }
        }
    }
}

//Determining MSB position
ll msb_position(ll n){
    if(n==0)
        return 0;
    return ((ll)log2(n)+1);
}

//Starts from here...

void SIR(){
    ll n;
    cin>>n;
    string s;
    cin>>s;
    ll z=0,on=0;
    ll count=0,res=1;
    f(i,0,s.size()){
        if(s[i]=='0')
            z++;
        else
            on++;
        if(z==on)
            count++;
    }
    cf(i,1,count){
        res*=2;
    }
    cout<<res<<endl;    
}

int main(){
    fast;
    ll tc;
    tc = 1;
    cin>>tc;
    for(ll test=1;test<=tc;test++){
        SIR();
    }
    return 0;
}
